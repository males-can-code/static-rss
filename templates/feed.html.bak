<!DOCTYPE html>
<HTML lang="en">
     <HEAD>
        <META charset="utf-8">
        <TITLE>StaticRSS|$feed_title</TITLE>
        <LINK rel="shortcut icon" href="$favicon">
        <LINK rel="stylesheet" type="text/css" href="$css">
        {{switch=auto_refresh}}
        <SCRIPT type="text/javascript">document.write("<meta http-equiv='refresh' content='$auto_refresh' >");</SCRIPT>
        {{endswitch=auto_refresh}}
    </HEAD>
    <BODY>
        {{switch=auto_mark_read}}
        <IFRAME style="display:none" src="$domain/php/mark_read.php?hash=$feed_hash&amp;mode=silent"></IFRAME>
        {{endswitch=auto_mark_read}}
        <DIV id="main_wrapper">
            <DIV class="feed_sidebar">
            {{loop=feed_list}}
                {{switch=feed_list_title}}
                <DIV class=group><A href="#">$group_title</A>
                {{endswitch=feed_list_title}}
                    {{switch=feed_list_link}}
                    <DIV><A HREF="$feed_url" class="$feed_read">$feed_link$counter</A></DIV>
                    {{endswitch=feed_list_link}}
                {{switch=feed_list_close}}
                </DIV>
                {{endswitch=feed_list_close}}
            {{endloop=feed_list}}
            </DIV>
            <DIV class="entry_sidebar"> 
                {{loop=entry_list}}
                <DIV><A HREF="$entry_url#$entry_hash" class="$entry_read">$entry_title</A></DIV>
                {{endloop=entry_list}}
            </DIV>
        <DIV id="feed_wrapper">
            <DIV id="feed_title">$feed_title</DIV>
                <DIV class="php_buttons">
                    {{switch=mark_read}}
                    <A HREF="$domain/php/mark_read.php?hash=$feed_hash&amp;go_back=$go_back">mark feed read</A>
                    {{endswitch=mark_read}}
                    {{switch=mark_all_read}}
                    ::
                    <A HREF="$domain/php/mark_read.php?hash=all&amp;go_back=$go_back">mark all read</A>
                    {{endswitch=mark_all_read}}
                    {{switch=update_feeds}}
                    ::
                    <A HREF="$domain/php/update.php?go_back=$go_back">update</A>
                    {{endswitch=update_feeds}}
                    ::
                    {{switch=delete_feed}}
                    <A HREF="$domain/php/del_feed.php?hash=$feed_hash&amp;go_back=$domain">delete feed</A>
                    {{endswitch=delete_feed}}
                </DIV>
                <DIV class="page_links">
                    <A HREF=$page_prev>&lt;</A>
                    {{loop=page_links}}
                    <A HREF="$page_url">$page</A>
                    {{endloop=page_links}}
                    <A HREF=$page_next>></A>
                </DIV>
                {{loop=entries}}
                <DIV class="entry_box">
                    <DIV class="entry_header_wrapper">
                        <DIV class="entry_title"><A id="$entry_hash" HREF="$entry_url" class="$entry_read" target="$links_target">$entry_title</A></DIV>
                    </DIV>
                    <DIV class="entry_date_published">$entry_date_published</DIV>
                    <DIV class="entry_content">$entry_content</DIV>
                </DIV>
                {{endloop=entries}}
                <DIV class="php_buttons">
                    {{switch=mark_read}}
                    <A HREF="$domain/php/mark_read.php?hash=$feed_hash&amp;go_back=$go_back">mark feed read</A>
                    {{endswitch=mark_read}}
                    {{switch=mark_all_read}}
                    |
                    <A HREF="$domain/php/mark_read.php?hash=all&amp;go_back=$go_back">mark all read</A>
                    {{endswitch=mark_all_read}}
                    {{switch=update_feeds}}
                    |
                    <A HREF="$domain/php/update.php?go_back=$go_back">update</A>
                    {{endswitch=update_feeds}}
                </DIV>
                <DIV class="page_links">
                    <A HREF=$page_prev>&lt;</A>
                    {{loop=page_links}}
                        <A HREF="$page_url">$page</A>
                    {{endloop=page_links}}
                    <A HREF=$page_next>></A>
                </DIV>
            </DIV>
        </DIV>
    </BODY>
</HTML>
